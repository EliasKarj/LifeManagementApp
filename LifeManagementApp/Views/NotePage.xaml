<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LifeManagementApp.Views.NotePage"
             Title="Muokkaa">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Poista" Command="{Binding DeleteCommand}" />
        <ToolbarItem Text="Tallenna" Command="{Binding SaveCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="15">
        <Editor Text="{Binding CurrentNote.Text}" 
                Placeholder="Kirjoita muistiinpano tähän..." 
                VerticalOptions="FillAndExpand"
                AutoSize="TextChanges"/>
    </Grid>
</ContentPage>